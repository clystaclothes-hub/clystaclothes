{
    "name": "raffay-clothing-backend",
    "version": "1.0.0",
    "description": "Backend for Raffay Clothing website",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "prod": "NODE_ENV=production node server.js",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop raffay-clothing-backend",
        "pm2:restart": "pm2 restart raffay-clothing-backend",
        "pm2:delete": "pm2 delete raffay-clothing-backend",
        "pm2:logs": "pm2 logs raffay-clothing-backend",
        "pm2:monit": "pm2 monit",
        "seed": "node database/seedData.js",
        "db:setup": "node database/setup.js",
        "db:health": "node -e \"require('./database/setup').checkDatabaseHealth()\"",
        "db:reset": "node -e \"require('./database/setup').resetDatabase()\"",
        "db:seed": "node database/seedData.js",
        "test": "jest",
        "install:pm2": "npm install -g pm2",
        "service:install": "pm2 startup && pm2 save",
        "service:uninstall": "pm2 unstartup"
    },
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^7.5.0",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "helmet": "^7.0.0",
        "express-rate-limit": "^6.10.0",
        "express-validator": "^7.0.1",
        "compression": "^1.7.4",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.7.0"
    }
}